<% if current_user.site_admin? %>
  <tr class="form-group">
    <td class="col-sm-4"><%= f.label "orca_status", "Use Orca? (Experimental: do not use yet!)" %></td>
    <td><%= f.check_box :orca_status, checked: f.object.orca_status,
      data: {toggle: "toggle", on: "Yes", off: "No"} %></td>
    <td></td>
  </tr>
  <% if f.object.orca_status  %>
    <% if f.object.has_orca_build_result? %>
      <% build_status = f.object.orca_build_result['was_successful'] ? 'Completed' : 'Failed' %>
      <% status_style = f.object.orca_build_result['was_successful'] ? 'text-success' : 'text-danger' %>
    <% elsif f.object.upload.blank? %>
      <% build_status = "Unknown" %>
      <% status_style = 'text-danger' %>
    <% else %>
      <% build_status = "Pending" %>
      <% status_style = 'text-warning' %>
    <% end %>
    <tr>
      <td><strong>Orca Grader Build</strong></td>
      <td>
        <span class="<%= status_style %>"><%= build_status %></span>
      <% if build_status == "Pending" || build_status == "Unknown" %>
        <br />
        <span id="<%= "orca-server-image-status-#{f.object.id}" %>"></span>
      <% end %>
      </td>
      <td>
        <% if f.object.has_orca_build_result? %>
          <%= link_to "Build Logs",
            build_log_course_assignment_grader_path(@course, @assignment, f.object), target: '_blank',
            class: "btn btn-info"
          %>
        <% end %>
        <%= link_to "Rebuild Orca Image",
          rebuild_orca_image_course_assignment_grader_path(@course, @assignment, f.object),
          method: 'POST',
          class: "btn btn-default" %>
      </td>
      <td></td>
    </tr>
  <% end %>
<% end %>
